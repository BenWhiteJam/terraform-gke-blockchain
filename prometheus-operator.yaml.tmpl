apiVersion: helm.fluxcd.io/v1
kind: HelmRelease
metadata:
  name: prom
  namespace: monitoring
spec:
  chart:
    repository: https://kubernetes-charts.storage.googleapis.com/
    name: prometheus-operator
    version: 9.1.0
  values:
    #prometheus.prometheusSpec.ruleNamespaceSelector: any
    grafana:
      enabled: false
    alertmanager:
      config:
        global:
        %{ if monitoring_slack_url != "" }
          slack_api_url: "${monitoring_slack_url}"
        %{ endif}
          resolve_timeout: 5m
        route:
          group_by: ['job']
          group_wait: 30s
          group_interval: 5m
          repeat_interval: 12h
          routes:
          - match:
              alertname: NoRemoteSigner
            receiver: 'slack'
          - match:
              alertname: KubePersistentVolumeFillingUp
            receiver: 'slack'
          - match:
              alertname: SignerPowerLoss
            receiver: 'slack'
          - match:
              alertname: SignerWiredNetworkLoss
            receiver: 'slack'
          - match:
              alertname: SignerWirelessNetworkLoss
            receiver: 'slack'
          - receiver: 'null'
        receivers:
        - name: 'null'
        - name: 'slack'
          slack_configs:
          - channel: "#infra"
            send_resolved: true
            icon_url: https://avatars3.githubusercontent.com/u/3380462
            title: |-
              [{{ .Status | toUpper }}{{ if eq .Status "firing" }}:{{ .Alerts.Firing | len }}{{ end }}] {{ .CommonLabels.alertname }} for {{ .CommonLabels.job }}
              {{- if gt (len .CommonLabels) (len .GroupLabels) -}}
                {{" "}}(
                {{- with .CommonLabels.Remove .GroupLabels.Names }}
                  {{- range $index, $label := .SortedPairs -}}
                    {{ if $index }}, {{ end }}
                    {{- $label.Name }}="{{ $label.Value -}}"
                  {{- end }}
                {{- end -}}
                )
              {{- end }}
            text: >-
              {{ range .Alerts -}}
              *Alert:* {{ .Annotations.title }}{{ if .Labels.severity }} - `{{ .Labels.severity }}`{{ end }}
  
              *Description:* {{ .Annotations.description }}
  
              *Details:*
                {{ range .Labels.SortedPairs }} â€¢ *{{ .Name }}:* `{{ .Value }}`
                {{ end }}
              {{ end }}
  
